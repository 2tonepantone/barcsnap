<footer id="footer-stick">
  <div class="d-flex item-drawer justify-content-center bg-light">
    <div class="d-flex">
      <a type="button" id="btn-scn-compare" class="d-flex mx-0 px-3 flex-column flex-grow-1 scanner-start
      barcode-compare btn bg-light hidding1" data-toggle="modal" data-target="#camera">
        <i class="fas fa-barcode"></i><span class="footer-text">Scan & Compare</span>
      </a>
    </div>
    <div class="d-flex">
      <a type="button" id="btn-scn-single" class="d-flex mx-0 px-3 flex-column flex-grow-1 scanner-start
      scanner-new btn bg-light hidding2" data-toggle="modal" data-target="#camera">
        <i class="fas fa-camera"></i><span class="footer-text">Scan</span>
      </a>
    </div>
    <div class="d-flex">
      <a type="button" id="btn-scn-multiple" class="d-flex mx-0 px-3 flex-column flex-grow-1 scanner-start
      barcode-multiple btn bg-light hidding3" data-toggle="modal" data-target="#camera">
        <i class="fas fa-tags"></i><span class="footer-text">Scan Multiple</span>
      </a>
    </div>
  </div>
</footer>
<div class="container">
  <% body_content = render 'shared/barcode_scanner', product: @product %>
  <%= render 'shared/modal', modal_id: 'camera', modal_title: 'Show me your barcode!',
        text_header: ' ', text_body: ' ', body_content: body_content,
        redirect_path: root_path, btn_modal_confirm: 'Home'  %>
</div>

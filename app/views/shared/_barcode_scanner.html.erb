<div class="container">
  <div id="scandit-barcode-picker" style="max-width: 1280px; max-height: 80%;">
    <%= form_with url: "/products", class: '', method: "POST" do |form| %>
      <%= form.label :barcode, "Barcode number:" %>
      <%= form.text_field :barcode, id: 'barcodeInput' %>
      <% if @product %>
        <%= form.label :compare, "Scan and compare" %>
        <%= form.check_box :compare, id: 'barcodeCompare' %>
        <%= form.label :first_product_id, "Compare product id:" %>
        <%= form.number_field :first_product_id, id: 'compareProductId', value: product.id %>
      <% end %>
      <%= form.submit "Search", id: 'barcodeSubmit' %>
    <% end %>
  </div>
</div>

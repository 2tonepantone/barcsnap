<div class="modal fade" id="CompareSecond" tabindex="-1" aria-labelledby="createCourseLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="createCourseLabel">Create New Course</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Choose an option. <br>
          <%= link_to product_path(product) do %>
            <span class="btn btn-dark flex-grow-1" data-toggle="modal" data-target="#CompareSecond">More infomation</span>
          <% end %>
          <%= link_to product_path(@product) + "?product_id=#{product.id}" do %>
            <span class="btn btn-dark flex-grow-1" data-toggle="modal" data-target="#CompareSecond">Compare this product</span>
          <% end %>
        </div>
      </div>
    </div>
</div>

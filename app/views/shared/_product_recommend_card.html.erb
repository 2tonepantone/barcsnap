<div class="row" style="position: relative;">
  <div class="col-9">
    <h4 class="mb-1 mt-3">Recommended for you</h4>
  </div>
  <div class="col">
    <%=  link_to (product_path(@product) + '?sort_by=most_related') do %>
      <span class="mb-1 text-right mr-3" style="position: absolute; bottom:0; right:0;">More<i class="fas fa-chevron-right"></i></span>
    <% end %>
  </div>
</div>
<div class="cards-product">
  <% @product.find_related_on_tags.to_a.each_slice(2) do |product_row| %>
    <div class="row mx-0">
      <% product_row.each do |product| %>
        <div class="col p-0 m-0">
          <% if show_compare_option %>
          <% modal_id = "product#{product.id}" %>
            <%= render 'shared/modal_product_info',product: product, modal_id: modal_id %>
            <div data-toggle="modal" data-target="#<%= modal_id %>" >
              <%= render 'shared/product_card', bg_img_url: product.photo.attached? ? cl_image_path(product.photo.key , height: 300, width: 400, crop: :fill) : image_path("https://dummyimage.com/300x300/fff/000&text=X"), product_name: product.name, price: "¥50"%>
            </div>
          <% else %>
            <% bg_img_url = product.photo.attached? ? cl_image_path(product.photo.key) : '' %>
            <%= link_to product_path(product) do %>
              <%= render 'shared/product_card', bg_img_url: bg_img_url, product_name: product.name, price: "¥#{rand(10..60) * 50}" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
      <% (2 - product_row.count).times do |i| %>
        <div class="col p-0 m-0">
          <div class="card-category-product mx-1 invisible"></div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

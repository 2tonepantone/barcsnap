<footer id ="footer-stick" class="bg-light text-center text-lg-start">
  <!-- Copyright -->
  <div class="text-center p-3 pr-4 item-drawer">
    <button type="button" class="btn btn-dark px-2 hidding1" data-toggle="modal" data-target="#takePhoto">scan</button>
    <button type="button" class="btn btn-dark px-2 hidding2" data-toggle="modal" data-target="#takePhoto">compare</button>
    <button type="button" class="btn btn-dark px-3 hidding3">Recommend</button>
    <i class="fas fa-chevron-right item-drawer-button"></i>
  </div>


  <!-- Copyright -->
  <script>
  document.querySelector(".item-drawer-button")
    .addEventListener("click", (event) => {
      document.querySelector(".item-drawer").classList.toggle("active");
      document.querySelector(".hidding1").classList.toggle("active")
      document.querySelector(".hidding2").classList.toggle("active")
      document.querySelector(".hidding3").classList.toggle("active")
      document.querySelector(".show-chevron").classList.toggle("active")

    });
  </script>
</footer>

<div class="modal fade" id="takePhoto" tabindex="-1" aria-labelledby="takePhotoLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="takePhotoLabel">Scan <i class="fas fa-paw"></i></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% body_content = render 'shared/barcode_scanner' %>
        <%= render 'shared/modal', modal_id: 'camera', modal_title: 'Camera',
        text_header: "It's time to snap!", text_body: 'Show me your barcode!', body_content: body_content,
        redirect_path: root_path, btn_modal_confirm: 'Home'  %>
        <div class="d-flex bd-highlight m-3">
          <a class="btn btn btn-dark flex-grow-1 justify-content-between" data-toggle="modal" data-target="#camera">
            <i class="fas fa-camera"></i> Scan a barcode!
          </a>
          <a href="" class="btn btn-dark ml-3" data-toggle="modal" data-target="#takePhoto">
            <i class="fas fa-file-upload"></i>
          </a>
        </div>
      </div>
    </div>
  </div>

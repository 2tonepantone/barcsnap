<footer id="footer-stick">
  <div class="d-flex item-drawer">
    <div class="d-flex flex-grow-1">
      <button type="button" class="d-flex flex-column flex-grow-1 scanner-start
      barcode-compare btn bg-light btn-outline-dark border-right-0 hidding1" data-toggle="modal" data-target="#camera">
        <span><i class="fas fa-barcode"></i></span>Scan & Compare</button>
    </div>
    <div class="d-flex flex-grow-1">
      <button type="button" class="d-flex flex-column flex-grow-1 scanner-start
      scanner-new btn bg-light btn-outline-dark border-right-0 hidding2" data-toggle="modal" data-target="#camera">
        <span><i class="fas fa-camera"></i></span>Scan
      </button>
    </div>
    <div class="d-flex flex-grow-1">
      <button type="button" class="d-flex flex-column flex-grow-1 scanner-multiple-start
      barcode-multiple btn bg-light btn-outline-dark hidding3" data-toggle="modal" data-target="#camera">
        <span><i class="fas fa-ellipsis-h"></i></span>Scan Multiple
      </button>
    </div>
  </div>
</footer>
<div class="container">
  <% body_content = render 'shared/barcode_scanner', product: @product %>
  <%= render 'shared/modal', modal_id: 'camera', modal_title: 'Show me your barcode!',
        text_header: ' ', text_body: ' ', body_content: body_content,
        redirect_path: root_path, btn_modal_confirm: 'Home'  %>
</div>
